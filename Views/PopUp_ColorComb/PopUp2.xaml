                            <Button Click="Button_Click"  Style="{StaticResource ColorButtonStyleFirstRow}" Background="#0070c0" Command="{x:Static WPFColorPicker:PopUp2.SelectColorCommand}" CommandParameter="#0070c0" Margin="3,0,3,0" />
                            <Button Click="Button_Click"  Style="{StaticResource ColorButtonStyleFirstRow}" Background="#002060" Command="{x:Static WPFColorPicker:PopUp2.SelectColorCommand}" CommandParameter="#002060" Margin="3,0,3,0" />
                            <Button Click="Button_Click"  Style="{StaticResource ColorButtonStyleFirstRow}" Background="#7030a0" Command="{x:Static WPFColorPicker:PopUp2.SelectColorCommand}" CommandParameter="#7030a0" Margin="3,0,3,0" />
                        </StackPanel>
                        <Button Click="MoreColorsClicked" Content="More Colors..." Style="{DynamicResource BorderLessButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
